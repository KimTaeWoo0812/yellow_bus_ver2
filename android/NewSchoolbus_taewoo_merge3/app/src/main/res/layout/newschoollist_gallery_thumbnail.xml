<?xml version="1.0" encoding="utf-8"?>
<net.computeering.newschoolbus.NewSchoolListPackage.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@android:color/black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:backgroundTint="#FBC02D"
        android:background="#FBC02D"
        android:tint="#FBC02D"
        android:tintMode="multiply"
        android:backgroundTintMode="multiply" />
    <TextView
        android:id="@+id/schoolTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_gravity="bottom"
        android:textColor="@android:color/white"
        android:background="#55000000"
        />
</net.computeering.newschoolbus.NewSchoolListPackage.SquareLayout>